@model TunePhere.Models.ListeningRoomParticipant

@{
    ViewData["Title"] = "Thêm Người Tham Gia";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Thêm Người Tham Gia Phòng</h2>
                    
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="RoomId" class="form-label">Chọn Phòng</label>
                            <select asp-for="RoomId" class="form-select" asp-items="ViewBag.RoomId">
                                <option value="">-- Chọn phòng --</option>
                            </select>
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">Chọn Người Dùng</label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                                <option value="">-- Chọn người dùng --</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-info-circle"></i> Thông Tin Bổ Sung
                                </h5>
                                <p class="card-text mb-0">
                                    Thời gian tham gia sẽ được tự động cập nhật khi người dùng tham gia phòng.
                                </p>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-plus"></i> Thêm Người Tham Gia
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Quay Lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .card {
        border: none;
        border-radius: 15px;
    }
    .btn {
        border-radius: 20px;
        padding: 0.5em 1.5em;
    }
    .form-control, .form-select {
        border-radius: 10px;
    }
</style>
