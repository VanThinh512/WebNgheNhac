@model TunePhere.Models.ListeningRoomParticipant

@{
    ViewData["Title"] = "Xóa Người Tham Gia";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                        <h2 class="card-title">Xác Nhận Xóa Người Tham Gia</h2>
                        <p class="text-muted">Bạn có chắc chắn muốn xóa người tham gia này?</p>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-info-circle"></i> Thông Tin Người Tham Gia
                            </h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <strong>Người dùng:</strong> @Model.User.UserName
                                    </p>
                                    <p class="mb-1">
                                        <strong>ID:</strong> @Model.User.Id
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <strong>Phòng:</strong> @Model.Room.Title
                                    </p>
                                    <p class="mb-1">
                                        <strong>Thời gian tham gia:</strong> @Model.JoinedAt.ToString("dd/MM/yyyy HH:mm")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle"></i>
                        <strong>Lưu ý:</strong> Hành động này không thể hoàn tác. Người dùng sẽ bị xóa khỏi phòng nghe nhạc.
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xác Nhận Xóa
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Quay Lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }
    .btn {
        border-radius: 20px;
        padding: 0.5em 1.5em;
    }
    .alert {
        border-radius: 10px;
    }
</style>
